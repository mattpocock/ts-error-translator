{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "translate": "ts-node -T scripts/translate.ts",
    "lint": "turbo run lint && prettier --check .",
    "test": "turbo run test",
    "extension:build": "yarn workspace ts-error-translator compile",
    "format": "prettier --write .",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "release": "turbo run publish:vsce publish:ovsx && node ./scripts/tag-extension.js"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "micromatch": "^4.0.5",
    "prettier": "^2.5.1",
    "ts-node": "^10.7.0",
    "turbo": "^1.2.6"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 80,
    "singleQuote": true,
    "semi": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0"
  }
}
