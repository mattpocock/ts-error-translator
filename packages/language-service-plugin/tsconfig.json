  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./out",
    "rootDir": "src",
    "strict": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", "out"
  ]
}