{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "outDir": "./out",
    "rootDir": "src",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}